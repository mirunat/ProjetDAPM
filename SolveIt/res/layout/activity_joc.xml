<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dapm.Joc" >

    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
         />

    
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginTop="40dp"
        android:orientation="vertical" 
        android:layout_centerHorizontal="true">
        
        <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

            <ImageView
                android:id="@+id/p1"
                android:layout_width="90px"
                android:layout_height="120px"
                android:onClick="Click"
                android:src="@drawable/p1"
                android:tag="1" />

        <ImageView
            android:id="@+id/p2"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p2"
            android:tag="2" />

        <ImageView
            android:id="@+id/p3"
            android:layout_width="90px"
                android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p3"
            android:tag="3" />

        <ImageView
            android:id="@+id/p4"
            android:layout_width="90px"
                android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p4"
            android:tag="4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/p5"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p5"
            android:tag="5" />

        <ImageView
            android:id="@+id/p6"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p6"
            android:tag="6" />

        <ImageView
            android:id="@+id/p7"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p7"
            android:tag="7" />

        <ImageView
            android:id="@+id/p8"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p8"
            android:tag="8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/p9"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p9"
            android:tag="9" />

        <ImageView
            android:id="@+id/p10"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p10"
            android:tag="10" />

        <ImageView
            android:id="@+id/p11"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p11"
            android:tag="11" />

        <ImageView
            android:id="@+id/p12"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p12"
            android:tag="12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/p13"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p13"
            android:tag="13" />

        <ImageView
            android:id="@+id/p14"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p14"
            android:tag="14" />

        <ImageView
            android:id="@+id/p15"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p15"
            android:tag="15" />

        <ImageView
            android:id="@+id/p16"
            android:layout_width="90px"
            android:layout_height="120px"
            android:onClick="Click"
            android:src="@drawable/p16"
            android:tag="16" />
        
    </LinearLayout>
 </LinearLayout>

    

</RelativeLayout>